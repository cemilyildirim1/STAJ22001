<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tab_selected_background_color"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item android:bottom="4dp" android:top="4dp" android:left="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                    <corners android:radius="16dp"/>
                    <elevation android:elevation="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_unselected_background_color"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
